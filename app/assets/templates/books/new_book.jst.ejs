<h5>Create a new Book</h5>

<form role="form">
	<div class="form-inputs">
		<div class="form-group">
			<input type="text" name="book[title]" placeholder="Enter book title" id="book-title">
		</div>
		<div class="form-group">
			<input type="text" name="book[author]" placeholder="Enter book author" id="book-author">
		</div>
		<div class="form-group">
			<textarea name="book[description]" placeholder="Description" id="book-description"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Create Book" class="btn btn-primary btn-sm">
		</div>
	</div>
</form>